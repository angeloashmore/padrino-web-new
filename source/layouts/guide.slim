doctype html
html
  head= partial 'layouts/head'
  body class=page_classes
    .grid
      = partial 'layouts/header'
      .page
        .page__sidebar
          .sidebar
            = partial current_page.data.sidebar || sidebar
        .page__content
          .content
            p.content__chapter-title= current_page.data.chapter
            = yield
      = partial 'layouts/footer'
